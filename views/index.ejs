<%if(bank){%>
<div style="padding : 3%;">
  <div class="card-columns">
      <%for(var i=0;i<bank.length;i++){%>
    <div class="card" style="width: 20rem;">
      <img class="card-img-top" src="<%=bank[i].imageUrl%>" alt="Card image cap" width="100%">
      <div class="card-block">
        <h4 class="card-title"><%=bank[i].name%></h4>
          <%if(bank[i].atm == ''){
          bank[i].atm = "YES"
          }%>
