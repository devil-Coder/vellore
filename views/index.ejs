                              <p class="control">
                                  <button type="submit" class="button is-primary is-outlined">Post comment</button>
                              </p>
                          </div>
                      </form>
                  </article>
              </div>
          </div>
      </div>
    <div class="columns">
        <%for(var i=0;i<comments.length;i++){%>
